@model IEnumerable<WebsiteChoThueXe.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
    <link href="~/Areas/Admin/Content/CSS/Styletable.css" rel="stylesheet" />
}

<h2>Danh sách khách hàng</h2>
<table class="content-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tên Khách Hàng")
            </th>
            <th>
                @Html.DisplayName("Địa Chỉ")
            </th>
            <th>
                @Html.DisplayName("CCCD")
            </th>
            <th>
                @Html.DisplayName("Số Điện Thoại")
            </th>
            <th>
                @Html.DisplayName("Số Bằng Lái")
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKhachHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CCCD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoBangLai)
                </td>
            
                <td>
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaKhachHang }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


